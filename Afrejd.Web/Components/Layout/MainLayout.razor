@inherits LayoutComponentBase

<div class="page">

    <head>
        <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
    </head>

    <NavMenu />
    <MudThemeProvider />
    <MudDialogProvider /> 
    <MudSnackbarProvider />

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
